<main class="nk-pages tc-light">
  <!-- // -->
	<section class="section" id="why">
			<%= render "devise/shared/error_messages", resource: resource %>
      <div class="container">
          <div class="section-head section-head-s9 wide-sm">
              <h6 class="title title-xs title-s1 tc-primary animated" data-animate="fadeInUp" data-delay=".1">Planos</h6>
              <h2 class="title title-semibold animated" data-animate="fadeInUp" data-delay=".2">Escolha sua forma de assinatura</h2>
              <p class="animated" data-animate="fadeInUp" data-delay=".3">The ICO Crypto Team combines a passion for esports, industry experise &amp; proven record in finance, development, marketing.</p>
          </div>
          <!-- Block @s -->
          <div class="nk-block">
              <div class="row gutter-vr-30px justify-content-center">
								<a href="javascript:void(0)" onclick="selectPlan(0, 1)">
                  <div class="col-lg-6 col-md-6">
                      <div id="plan0" class="feature feature-s8 feature-center card card-full card-md bg-theme-alt animated"
												data-animate="fadeInUp" data-delay=".4" style="border: 3px solid #f42f54;">
                          <div class="feature-icon my-0">
														<%= image_tag "medal.png" %>
                          </div>
                          <div class="feature-text feature-text-s8">
                              <h4 class="title title-sm title-thin title-s5"><span>Plano 1 </span>Experiência básica</h4>
                              <p>Millions of datasets indexedin culpa qui officia id est laborum</p>
                              <a href="#" class="link link-primary link-feature-s1"><em class="link-icon icon-circle icon-circle-md ti ti-arrow-right"></em></a>
                          </div>
                      </div>
                  </div><!-- .col -->
								</a>
								<a href="javascript:void(0)" onclick="selectPlan(1, 0)">
                  <div class="col-lg-6 col-md-6">
                      <div id="plan1" class="feature feature-s8 feature-center card card-full card-md bg-theme-alt animated" data-animate="fadeInUp" data-delay=".5">
                          <div class="feature-icon my-0">
                              <%= image_tag "trophy.png" %>
                          </div>
                          <div class="feature-text feature-text-s8">
                              <h4 class="title title-sm title-thin title-s5"><span>Plano 2 </span>Experiência completa</h4>
                              <p>Millions of datasets indexedin culpa qui officia id est laborum</p>
                              <a href="#" class="link link-primary link-feature-s1"><em class="link-icon icon-circle icon-circle-md ti ti-arrow-right"></em></a>
                          </div>
                      </div>
                  </div><!-- .col -->
								</a>
              </div><!-- .row -->
          </div><!-- .block @e -->
					<div class="section-head section-head-s9 wide-sm">
              <h6 class="title title-xs title-s1 tc-primary animated" data-animate="fadeInUp" data-delay=".1">Planos</h6>
              <h2 class="title title-semibold animated" data-animate="fadeInUp" data-delay=".2">Crie sua conta</h2>
              <p class="animated" data-animate="fadeInUp" data-delay=".3">The ICO Crypto Team combines a passion for esports, industry experise &amp; proven record in finance, development, marketing.</p>
          </div>
					<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
      				defaults: { input_html: { class: 'validate' } }) do |f| %>
							<%= f.hidden_field :plan_id, value: 1 %>
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="field-item">
										<div class="field-wrap">
											<%= f.input :name,
													required: true,
													label: false,
                    			autofocus: true,
													placeholder: "Seu nome",
													input_html: { class: "input-bordered" } %>
										</div>
								</div>
							</div>
							<div class="col-lg-6 col-md-6">
								<div class="field-item">
										<div class="field-wrap">
											<%= f.input :email,
													required: true,
													label: false,
													placeholder: "Seu email",
													input_html: { class: "input-bordered" } %>
										</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-lg-6 col-md-6">
								<div class="field-item">
										<div class="field-wrap">
											<%= f.input :password,
													required: true,
													label: false,
													placeholder: "Sua senha",
													input_html: { class: "input-bordered" } %>
										</div>
								</div>
							</div>
							<div class="col-lg-6 col-md-6">
								<div class="field-item">
										<div class="field-wrap">
											<%= f.input :password_confirmation,
													required: true,
													label: false,
													placeholder: "Repita sua senha",
													input_html: { class: "input-bordered" } %>
										</div>
								</div>
							</div>
						</div>
						<div class="col-lg-6 col-md-6">
							<div class="field-item">
								<%= f.input_field :terms_of_service,
										required: true,
										boolean_style: :inline,
										class: "input-checkbox" %>
										<label for="user_terms_of_service">Concordo</label>
							</div>
						</div>
							<button class="btn btn-primary btn-block btn-md">Sign Up</button>
					<% end %>
      </div>
  </section>
</main>
