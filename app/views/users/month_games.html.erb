<body class="user-dashboard">
    <div class="topbar">
        <div class="topbar-md d-lg-none">
            <div class="container">
                <div class="d-flex align-items-center justify-content-between">
                    <a href="#" class="toggle-nav">
                        <div class="toggle-icon">
                            <span class="toggle-line"></span>
                            <span class="toggle-line"></span>
                            <span class="toggle-line"></span>
                            <span class="toggle-line"></span>
                        </div>
                    </a><!-- .toggle-nav -->

                    <div class="site-logo">
                        <a href="index.html" class="site-brand">
                          <img src="<%= asset_path('indieloot_logo3_1x.png') %>" srcset="<%= asset_path('indieloot_logo3_2x.png') %> 2x" alt="logo">
                        </a>
                    </div><!-- .site-logo -->

                </div><!-- .container -->
            </div><!-- .container -->
        </div><!-- .topbar-md -->
        <div class="container">
            <div class="d-lg-flex align-items-center justify-content-between">
                <div class="topbar-lg d-none d-lg-block">
                    <div class="site-logo">
                        <%= link_to root_path, class: "site-brand" do %>
                          <img src="<%= asset_path('indieloot_logo3_1x.png') %>" srcset="<%= asset_path('indieloot_logo3_2x.png') %> 2x" alt="logo">
                        <% end %>
                    </div><!-- .site-logo -->
                </div><!-- .topbar-lg -->

                <div class="topbar-action d-none d-lg-block">
                    <ul class="topbar-action-list">
                        <li class="topbar-action-item topbar-action-link">
                            <%= link_to root_path do %>
                              <em class="ti ti-home"></em>
                              Página inicial
                            <% end %>
                        </li><!-- .topbar-action-item -->

                        <li class="topbar-action-item topbar-action-link">
                            <%= link_to root_path do %>
                              <em class="ti ti-power-off"></em>
                              Sair
                            <% end %>
                        </li><!-- .topbar-action-item -->


                    </ul><!-- .topbar-action-list -->
                </div><!-- .topbar-action -->
            </div><!-- .d-flex -->
        </div><!-- .container -->
    </div>
    <!-- TopBar End -->


    <div class="user-wraper">
        <div class="container">
            <div class="d-flex">
                <div class="user-sidebar">
                    <div class="user-sidebar-overlay"></div>
                    <div class="user-box d-none d-lg-block">
                        <h6 class="user-name"><%= @user.name %></h6>
                        <div class="user-uid">
                          <%= @user.email %>
                        </div>
                    </div><!-- .user-box -->
                    <ul class="user-icon-nav">
                        <li><a href="index.html"><em class="ti ti-dashboard"></em>Dashboard</a></li>
                        <li><a href="kyc.html"><em class="ti ti-files"></em>Jogos do mês</a></li>
                        <li><a href="tokens.html"><em class="ti ti-pie-chart"></em>Biblioteca</a></li>
                        <li><a href="account.html"><em class="ti ti-user"></em>Configurações</a></li>
                    </ul><!-- .user-icon-nav -->
                    <div class="user-sidebar-sap"></div><!-- .user-sidebar-sap -->
                    <ul class="user-nav">
                        <li><a href="how-to.html">How to buy?</a></li>
                        <li><a href="faq.html">Faqs</a></li>
                        <li><a href="#">Whitepaper</a></li>
                        <li>Contact Support<span>info@icocrypto.com</span></li>
                    </ul><!-- .user-nav -->
                    <div class="d-lg-none">
                        <div class="user-sidebar-sap"></div>
                        <div class="gaps-1x"></div>
                        <ul class="topbar-action-list">
                            <li class="topbar-action-item topbar-action-link">
                                <a href="#"><em class="ti ti-home"></em> Go to main site</a>
                            </li><!-- .topbar-action-item -->
                            <li class="dropup topbar-action-item topbar-action-language">
                                <a href="#" data-toggle="dropdown" aria-haspopup="true"> EN <em class="ti ti-angle-up"></em> </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">FR</a></li>
                                    <li><a href="#">JY</a></li>
                                    <li><a href="#">CH</a></li>
                                </ul>
                            </li><!-- .topbar-action-item -->
                        </ul><!-- .topbar-action-list -->
                    </div>
                </div><!-- .user-sidebar -->

                <div class="user-content">
                    <div class="user-panel">
                        <h2 class="user-panel-title">Jogos do mês</h2>

                        <% @month_games.each do |game| %>
                          <div class="token-card">
                              <div class="token-info">
                                  <h2 class="token-bonus"><%= game.name %></h2>
                                  <ul class="token-timeline">
                                      <li><span>Disponível em</span>25 Aug 2018</li>
                                  </ul>
                              </div>
                              <div class="token-countdown">
                                  <span class="token-countdown-title">Sua chave de ativação</span>
                                  <div class="refferal-info">
                                      <% existing_key = @redeemed_keys.find_by(game_id: game.id) %>
                                      <% if existing_key.nil? %>
                                        <div id="before_redeem_<%= game.id %>">
                                          <div class="token-bonus" style="font-size: 11px;">Você ainda não resgatou a chave do seu jogo.</div>
                                          <button class="btn btn-primary" onclick="redeem_game(<%= game.id %>)">Revelar</button>
                                        </div>
                                        <div id="after_redeem_<%= game.id %>" style="display: none; margin-top: 10px;">
                                          <input id="key_<%= game.id %>" type="text" class="refferal-address" value="" disabled>
                                          <button id="copy_<%= game.id %>" class="refferal-copy copy-clipboard" data-clipboard-text="">
                                            <em class="ti ti-files"></em>
                                          </button>
                                        </div>
                                      <% else %>
                                        <div style="margin-top: 10px;">
                                          <span class="refferal-copy-feedback copy-feedback"></span>
                                          <input type="text" class="refferal-address" value="<%= existing_key.encrypted_key %>" disabled>
                                          <button class="refferal-copy copy-clipboard" data-clipboard-text="<%= existing_key.encrypted_key %>">
                                            <em class="ti ti-files"></em>
                                          </button>
                                        </div>
                                      <% end %>
                                  </div><!-- .refferal-info --> <!-- @updated on v1.0.1 -->
                              </div>
                          </div><!-- .token-card -->
                        <% end %>
                    </div><!-- .user-panel -->
                </div><!-- .user-content -->
            </div><!-- .d-flex -->
        </div><!-- .container -->
    </div>
    <!-- UserWraper End -->


    <div class="footer-bar">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <span class="footer-copyright">Copyright 2018, <a href="#">ICO Crypto</a>.  All Rights Reserved.</span>
                </div><!-- .col -->
                <div class="col-md-5 text-md-right">
                    <ul class="footer-links">
                        <li><a href="policy.html">Privacy Policy</a></li>
                        <li><a href="policy.html">Terms of Sales</a></li>
                    </ul>
                </div><!-- .col -->
            </div><!-- .row -->
        </div><!-- .container -->
    </div>
    <!-- FooterBar End -->
</body>
